<body id="top">
  <div id="headerweb"></div>

  <section class="contact-section bg-light py-5">
    <div class="container" style="padding-top: 100px; background-color: var(--light);">
      <h2 class="section-title text-center mb-5">Contact Us</h2>
      <div class="row">
        <div class="col-md-3 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <a href="https://instagram.com/taufik_hanafiasnan" class="text-decoration-none">
                <ion-icon name="logo-instagram" class="ion-icon" style="color: #E1306C;"></ion-icon>
                <p>@taufik_hanafiasnan</p>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <a href="https://tiktok.com/@teknikkomputer" class="text-decoration-none">
                <ion-icon name="logo-tiktok" class="ion-icon" style="color: #000000;"></ion-icon>
                <p>@teknikkomputer</p>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <a href="https://facebook.com/indonesia" class="text-decoration-none">
                <ion-icon name="logo-facebook" class="ion-icon" style="color: #4267B2;"></ion-icon>
                <p>Indonesia</p>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <a href="https://wa.me/6281298624094" class="text-decoration-none">
                <ion-icon name="logo-whatsapp" class="ion-icon" style="color: #25D366;"></ion-icon>
                <p>+62 812-98624094</p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="about-section bg-white py-5">
    <div class="container" style="padding-top: 50px; background-color: var(--white-1);">
      <div class="row">
        <div class="col-md-4">
          <img src="image/poto_opik.jpg" alt="Profile Photo" class="img-fluid rounded-circle mb-4">
        </div>
        <div class="col-md-8">
          <h1 class="section-title">About the Creator</h1>
          <p style="font-size: large; text-align: center; padding-top: 20px;">Hello! My name is Taufik Hanafi Asnan, and
            I am the creator of Blockbook. With a passion for web development and a keen eye for detail, I strive to
            create websites that are both visually appealing and highly functional. When I'm not coding, I enjoy
            exploring new technologies, sharing knowledge, and connecting with others in the tech community.</p>
        </div>
      </div>
    </div>
  </section>

  <div id="footerweb"></div>
  
  <a href="#top" class="back-top-btn" aria-label="back to top" data-back-top-btn>
    <ion-icon name="chevron-up" aria-hidden="true"></ion-icon>
  </a>

  <div id="cart" class="cart">
    <button class="close" id="close-cart">&times;</button>
    <h2>Keranjang Belanja</h2>
    <div id="empty-cart" class="empty-cart">
      <img src="image/keranjang.svg" alt="Cart Graphic">
      <p>Tidak ada pesanan</p>
    </div>
    <ul id="cart-items"></ul>
    <p class="total">Total: Rp. 0</p>
    <button class="checkout" id="checkout">Checkout</button>
  </div>
  <div class="page-overlay"></div>

  <div id="quickview-modal" class="quickview-modal">
    <div class="quickview-content">
      <div class="quickview-details"></div>
      <button class="close-quickview">&times;</button>
    </div>
  </div>

  <script src="/js/scriptweb.js" defer></script>
  <script src="/js/scriptkeranjang.js" defer></script>
  <script src="/js/scriptheaderfooter.js" defer></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" defer></script>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
